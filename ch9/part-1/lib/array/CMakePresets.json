{
  "version": 8,
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/install",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "test",
      "inherits": "default",
      "cacheVariables": {
        "MC_ARRAY_ENABLE_TEST": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "default",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "configurePreset": "default",
      "configuration": "Release"
    }
  ]
}
